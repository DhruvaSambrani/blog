#! /bin/sh
ghpages() {
    echo "deploying gh-pages"
    ./make all /blog
    gcap 
}

ctrlc() {
    echo "deploying to ctrl-c"
    ./make all /~dhruva
    sftp dhruva@ctrl-c.club <<EOF
put -R gemini
put -R build html
exit 
EOF
}

case "$1" in
  ghpages) ghpages
  ;;
  ctrlc) ctrlc
  ;;
  *) ghpages && ctrlc
  ;;
esac


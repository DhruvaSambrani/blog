#! /bin/sh
ghpages() {
    echo "deploying gh-pages"
    ./make html /blog
    gcap
    gh run watch
}

ctrlc() {
    echo "deploying to ctrl-c"
    ./make all /~dhruva
    rsync --delete -ave ssh gemini/* ctrl-c.club:gemini
    rsync --delete -ave ssh build/* ctrl-c.club:build
}

case "$1" in
  ghpages) ghpages
  ;;
  ctrlc) ctrlc
  ;;
  *) ctrlc && ghpages
  ;;
esac

